{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "strict": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2022",
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "skipLibCheck": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "tests",
    ]
  }